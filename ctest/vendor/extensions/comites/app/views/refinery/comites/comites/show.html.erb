<section id="body_content">
  <section id="body">
    <div id="comite">
      <%= image_fu @comite.logo, "400x400", class: "image-align-left" %>
      <h1><%= @comite.nombre %></h1>
      <p>
        <b>Facebook:</b> <%= @comite.facebook %>
      </p>
      <p>
        <b>Twitter:</b> <%= @comite.facebook %>
      </p>
      <p>
        <b>Correo:</b> <%= @comite.correo %>
      </p>
      <%= raw @comite.descripcion %>
      <p class="back"><%= link_to "Back to comites", refinery.comites_comites_path %></p>
    </div>
  </section>
</section>



