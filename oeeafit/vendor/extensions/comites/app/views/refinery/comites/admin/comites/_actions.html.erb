<ul>
  <% if ::Refinery::Comites::Admin::ComitesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.comites_admin_comites_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_comites_admin_comite_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Comites::Admin::ComitesController.sortable? && ::Refinery::Comites::Comite.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Comites"),
                 refinery.comites_admin_comites_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Comites"),
                 refinery.comites_admin_comites_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
